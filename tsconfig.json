{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/login/page.jsx",
    "src/app/why-bytefront/page.jsx",
    "src/app/contact/page.jsx",
    "src/app/page.jsx",
    "src/app/orders/[id]/page.jsx",
    "src/app/orders/page.jsx",
    "src/app/accessories/page.jsx",
    "src/app/laptops/page.jsx",
    "src/components/reviews-section.jsx",
    "src/components/payment-modal.jsx",
    "src/app/checkout/page.jsx",
    "src/components/product-card.jsx",
    "src/app/signup/page.jsx",
    "src/app/admin/orders/[id]/page.jsx",
    "src/app/cart/page.jsx",
    "src/hooks/use-cart.jsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
